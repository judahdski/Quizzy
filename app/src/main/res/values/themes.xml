<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyIntentApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/olive_green</item>
        <item name="colorPrimaryVariant">@color/olive_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/olive_green</item>
        <item name="colorSecondaryVariant">@color/olive_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextWidth.ScreenTitle" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextWidth.QuestionWithBg" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:backgroundTint">@color/light_yellow</item>
        <item name="color">@color/brown</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AnswerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="AnswerButton.First">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>